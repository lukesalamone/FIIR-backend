<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="luke.com.posttest.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:background="#88d4ff"
        android:text="sample text"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_height="60dp"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:text="/users/setPromo"
        android:id="@+id/btn1"
        android:onClick="one"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

    <Button
        android:layout_height="wrap_content"
        android:text="/pics/created"
        android:id="@+id/btn2"
        android:onClick="two"
        android:layout_below="@+id/btn1"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/pics/flag"
        android:id="@+id/btn3"
        android:onClick="three"
        android:layout_below="@+id/btn2"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/pics/hide"
        android:id="@+id/btn4"
        android:onClick="four"
        android:layout_below="@+id/btn3"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/friends/list"
        android:id="@+id/btn5"
        android:onClick="five"
        android:layout_below="@+id/btn4"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/friends/add"
        android:id="@+id/btn6"
        android:onClick="six"
        android:layout_below="@+id/btn5"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/friends/remove"
        android:id="@+id/btn7"
        android:onClick="seven"
        android:layout_below="@+id/btn6"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/settings/updateEmail"
        android:id="@+id/btn8"
        android:onClick="eight"
        android:layout_below="@+id/btn7"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

    <Button
        android:layout_height="wrap_content"
        android:text="/settings/updatePhone"
        android:id="@+id/btn9"
        android:onClick="nine"
        android:layout_below="@+id/btn8"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp" />

</RelativeLayout>
